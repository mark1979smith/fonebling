$(function() {
    var prices = $('.collection').data('total-price');

    var min_price   = Math.floor(Math.min.apply(Math,prices));
    var max_price   = Math.floor(Math.max.apply(Math,prices));

    var per_page    = 2;
    var page_number = 1;

